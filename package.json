{
  "name": "x-quote-to-farcaster",
  "description": "This extension helps you quote X posts on farcaster by providing a button to all posts on X.",
  "private": true,
  "version": "1.0.4",
  "type": "module",
  "scripts": {
    "inject": "bun build src/client/inject.ts --minify --target=browser --format iife --outdir src/client/",
    "content": "bun build src/client/content.ts --minify --target=browser --format iife --outdir src/client/",
    "post-build": "bun run ./scripts/post-build.ts",
    "release": "bun run ./scripts/version-release.ts",
    "dev": "vite",
    "build": "bun run inject && bun run content && vite build && bun run post-build",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "pretty": "prettier --write .",
    "postversion": "git push",
    "create-release": "tsx ./scripts/create-release.ts",
    "rebuild": "bun run build && bun run ./scripts/create-release.ts rebuild",
    "pub": "bun run build && bun run release && bun run ./scripts/create-release.ts",
    "only-pub": "bun run build && bun run ./scripts/create-release.ts"
  },
  "devDependencies": {
    "@crxjs/vite-plugin": "^2.0.3",
    "@sveltejs/vite-plugin-svelte": "^6.1.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tsconfig/svelte": "^5.0.4",
    "@types/archiver": "^6.0.3",
    "@types/bun": "^1.2.19",
    "@types/chrome": "^0.1.1",
    "archiver": "^7.0.1",
    "prettier": "^3.6.2",
    "sass": "^1.89.2",
    "svelte": "^5.36.8",
    "svelte-check": "^4.3.0",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.8.3",
    "vite": "^7.0.5"
  }
}